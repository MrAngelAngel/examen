<p id="notice"><%= notice %></p>

<h1>Listing Ruizs</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Direccion</th>
      <th>Totalfactura</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ruizs.each do |ruiz| %>
      <tr>
        <td><%= ruiz.Cliente %></td>
        <td><%= ruiz.Direccion %></td>
        <td><%= ruiz.TotalFactura %></td>
        <td><%= ruiz.Fecha %></td>
        <td><%= link_to 'Show', ruiz %></td>
        <td><%= link_to 'Edit', edit_ruiz_path(ruiz) %></td>
        <td><%= link_to 'Destroy', ruiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

